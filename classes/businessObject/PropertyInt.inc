<?php


namespace businessObject;


class PropertyInt extends Property
{


	public readonly ?int $minimum;
	public readonly ?int $maximum;


	public function __construct(bool $required= T, bool $nullable= F, ?int $minimum = N, ?int $maximum = N)
	{
		parent::__construct($required, $nullable);
		$this->minimum = $minimum;
		$this->maximum = $maximum;
	}


	#[\Override] protected function valueCheckOnSet(mixed $value): bool
	{
		if (is_int($value)) {
			if (($this->minimum !== null) && ($value < $this->minimum))
				return F;
			if (($this->maximum !== null) && ($value > $this->maximum))
				return F;

			return T;
		}

		return F;
	}


}